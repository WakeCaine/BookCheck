<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:useDefaultMargins="true"
                android:alignmentMode="alignBounds"
                android:columnCount="3"
                android:rowCount="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
        <ImageView
        android:id="@+id/img_thumbnail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:src="@drawable/ic_books"/>
        <TextView
            android:id="@+id/text_title"
            android:layout_height="match_parent"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="Placeholder Text for seeeing how things work. Placeholder Text for seeeing how things work."
            android:layout_alignTop="@+id/img_thumbnail"
            android:layout_toLeftOf="@+id/starView"
            android:layout_marginTop="15dp"/>
        <!--<TextView
            android:id="@+id/text_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_title"
            android:layout_alignLeft="@+id/text_title"
            android:layout_alignStart="@+id/text_title"/>-->


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/starView"
            android:src="@android:drawable/star_off"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/text_author"
            android:layout_alignEnd="@+id/text_author"/>
    </LinearLayout>
</GridLayout>